<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeCondutor" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topohomecondutor"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_x="60px"
                android:layout_y="100px"
                android:src="@drawable/add" />

            <ImageButton
                android:id="@+id/btRota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="250px"
                android:layout_y="100px"
                android:src="@drawable/rota" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btPresenca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_x="60px"
                android:layout_y="350px"
                android:src="@drawable/presenca" />

            <ImageButton
                android:id="@+id/btNotificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="250px"
                android:layout_y="350px"
                android:src="@drawable/notificar" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>